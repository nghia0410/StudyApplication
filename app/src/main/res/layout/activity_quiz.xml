<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.QuizActivity"
    android:orientation="vertical">

    <EditText
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/edit_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên bài trắc nghiệm" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/edit_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Câu hỏi" />

            <EditText
                android:id="@+id/edit_option1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phương án 1" />

            <EditText
                android:id="@+id/edit_option2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phương án 2" />

            <EditText
                android:id="@+id/edit_option3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phương án 3" />
            <EditText
                android:id="@+id/edit_option4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phương án 4" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ĐA:"
                android:textSize="18sp"
                android:padding="10dp"/>
            <RadioGroup
                android:id="@+id/radiogroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/checkbox_option1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A" />

                <RadioButton
                    android:id="@+id/checkbox_option2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="B" />

                <RadioButton
                    android:id="@+id/checkbox_option3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="C" />
                <RadioButton
                    android:id="@+id/checkbox_option4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="D" />
            </RadioGroup>


        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/btn_saveQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lưu câu hỏi" />

        <Button
            android:id="@+id/done_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Done" />

    </LinearLayout>

    <ListView
        android:id="@+id/listView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
