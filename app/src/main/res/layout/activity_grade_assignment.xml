<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GradeAssignment"
    >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:scaleX="1"
        android:src="@drawable/logo2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center"
        android:text="COURSE RESULTS"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        tools:layout_gravity="left">

        <TextView
            android:id="@+id/textView19"
            android:layout_width="146dp"
            android:layout_height="48dp"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:paddingLeft="10px"
            android:text="Number Question:"
            android:textColor="#FA100D0D"
            android:textColorHint="#F60606"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewTotalQuestion"
            android:layout_width="202dp"
            android:layout_height="48dp"
            android:text="0"
            android:textColor="#FA100D0D"
            android:textColorHint="#F60606"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:paddingLeft="10px"
            android:text="Correct Answer:"
            android:textColor="#FA100D0D"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewCorrectAnswer"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="0"
            android:textColor="#FA100D0D"
            android:textColorHint="#F60606"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:paddingLeft="10px"
            android:text="Incorrect Answer: "
            android:textColor="#FA100D0D"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewWrongAnswer"
            android:layout_width="209dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="0"
            android:textColor="#FA100D0D"
            android:textColorHint="#F60606"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:paddingLeft="10px"
            android:text="Score: "
            android:textColor="#FA100D0D"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textViewPercentScore"
            android:layout_width="229dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="0"
            android:textColor="#FA100D0D"
            android:textColorHint="#F60606"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewResultMessage"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:paddingLeft="10px"
            android:text="Chuc mung ban dat duoc chung chi or ban khong du diem de nhan chung chi"
            android:textColor="#FA100D0D"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|top"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_returnToQuiz"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="Return Course" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_getCertificate"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp"
            android:text="Get certificate" />
    </LinearLayout>

</LinearLayout>